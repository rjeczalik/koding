@css {
/*
Stacks Onboarding styles
*/
}

$accentColor                = #F2778A

.StackEditor-OnboardingModal
  font-family               SoleilFamily
  overflow                  hidden
  rounded                   6px
  border                    none

  &.kdmodal
    .kdmodal-inner
    .kdmodal-content
      margin                0

    .kdmodal-inner .close-icon
      r-sprite              app modal_close
      margin                20px 20px 0 0
      background-position   0 !important

  header
    height                  84px
    border-bottom           1px solid #DEDBDB
    bg                      color #fff
    text-align              center

    h1
      color                 #BABABA
      font-size             20px
      font-weight           300
      line-height           20px
      margin                31px 0
      display               inline-block
      fontPrecisionForSoleil()

  main
    text-align              center

    > h2
      color                 #585858
      margin                91px 0 12px
      font-size             27px
      font-weight           300
      line-height           27px
      fontPrecisionForSoleil()

    > p
      margin                0 140px
      width                 auto
      font-size             17px
      font-weight           300
      line-height           27px
      color                 #A59999
      letter-spacing        .2px
      fontPrecisionForSoleil()

  footer
    height                  75px
    border-top              1px solid #DEDBDB
    bg                      color #fff
    rel()


  .get-started footer
    button.next
    button.back
    a.HomeAppView--button
      hidden()

    .StackEditor-OnboardingModal--cancel
      visible()

  button.next
  button.back
  .StackEditor-OnboardingModal--cancel
    outlineButton           #BEBEBE
    height                  42px
    padding                 0 37px

    span.button-title
      font-size             14px
      letter-spacing        .2px
      text-transform        uppercase
      line-height           42px
      fontPrecisionForSoleil()

  button.back
    abs                     15px 0 0 26px

  button.next
    colorizeOutlineButton   $accentColor
    abs                     17px 17px

  .StackEditor-OnboardingModal--cancel
    left                    17px
    abs                     17px

  .kdtabhandlecontainer
    background              none
    padding                 0
    height                  62px
    line-height             62px
    box-shadow              inset 0 -3px 0 #f2f2f2
    border                  none

    .kdtabhandle-tabs
      size                  auto, auto
      fl()

    .kdtabhandle
      padding               0 23px
      margin                0
      border                none
      line-height           inherit
      height                62px
      background            none
      color                 #969696
      opacity               0.99
      font-size             14px
      font-weight           600

      a
        display             inline-block
        ellipsis()
        font-weight         400
        width               100%
        color               #969696

      &.active
        box-shadow          inset 0 -3px 0 #01b05a
        color               #575757 !important
        bg                  color, transparent !important
        a
          color             #575757



.StackEditor-OnboardingModal--create
  height                    60px
  padding                   12px 34px
  margin                    63px 0 101px

  span.button-title
    font-size               19px
    letter-spacing          .2px
    text-transform          uppercase
    fontPrecisionForSoleil()

// stack onboarding styling
.stack-onboarding

  .kdbutton
    &.green
      background            #00B057

    &.medium
      height                50px
      padding               0 35px

  .footer
    text-align              center
    margin-left             42px

    .kdbutton
      width                 120px

    .outline
      border                1px solid #A8A1A1

      &.back
        margin-right        8px

      span
        color               #A8A1A1

  .box-wrapper
    width                   525px
    margin                  57px auto

  .box
    size                    256px, 112px
    rounded                 4px
    border                  1px solid #E7E7E7
    background              #fff
    borderBox()
    fl()
    pointer()

    img
      margin-top            23px

    &:nth-child(2n -1)
      margin-right          11px

    .label
      font-size             16px
      text-align            center
      font-weight           300
      margin-top            13px

  .services
    .box
      size                  227px, 95px
    &.aws
      r-sprite              'stack-editor' 'aws'
    &.digitalocean
      r-sprite              'stack-editor' 'digitalocean'
    &.google
      r-sprite              'stack-editor' 'googlecloud'
    &.vagrant
      r-sprite              'stack-editor' 'vagrant'
    &.azure
      r-sprite              'stack-editor' 'azure'
    &.rackspace
      r-sprite              'stack-editor' 'rackspace'
    &.softlayer
      r-sprite              'stack-editor' 'softlayer'


  .coming-soon
    cursor                  not-allowed
    background              transparent

    img
      opacity               .4

    .label
      color                 #ddd
      font-weight           300
      font-size             12px

  .beta
    color                   white
    background              #A8CEFD
    height                  18px
    width                   42px
    position                absolute
    font-size               10px
    line-height             1.8
    left                    213px
    top                     10px
    letter-spacing          0.7px

  .box.selected
    shadow                  0 0 0 3px $accentColor

  .provider-selection
    height                  auto

    .provider
      margin-top            11px
      rel()

      &:first-child
      &:nth-child(2)
        margin-top            0
