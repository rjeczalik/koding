{
  "resource": {
    "marathon_app": {
      "multi-app": {
        "app_id": "/multi-app",
        "container": [
          {
            "docker": [
              {
                "image": "python:3",
                "network": "BRIDGE",
                "parameters": {
                  "parameter": [
                    {
                      "key": "entrypoint",
                      "value": "/mnt/mesos/sandbox/entrypoint.${count.index * 3 + 1}.sh"
                    }
                  ]
                },
                "port_mappings": {
                  "port_mapping": [
                    {
                      "container_port": 56789,
                      "host_port": 0,
                      "protocol": "tcp"
                    }
                  ]
                }
              },
              {
                "image": "ubuntu:14.04",
                "network": "BRIDGE",
                "parameters": {
                  "parameter": [
                    {
                      "key": "entrypoint",
                      "value": "/mnt/mesos/sandbox/entrypoint.${count.index * 3 + 2}.sh"
                    }
                  ]
                },
                "port_mappings": {
                  "port_mapping": [
                    {
                      "container_port": 56789,
                      "host_port": 0,
                      "protocol": "tcp"
                    }
                  ]
                }
              },
              {
                "image": "centos:7",
                "network": "BRIDGE",
                "parameters": {
                  "parameter": [
                    {
                      "key": "entrypoint",
                      "value": "/mnt/mesos/sandbox/entrypoint.${count.index * 3 + 3}.sh"
                    }
                  ]
                },
                "port_mappings": {
                  "port_mapping": [
                    {
                      "container_port": 56789,
                      "host_port": 0,
                      "protocol": "tcp"
                    }
                  ]
                }
              }
            ]
          }
        ],
        "count": 1,
        "cpus": 2,
        "env": {
          "KODING_KLIENT_URL": "$KLIENT_URL",
          "KODING_METADATA_1": "...",
          "KODING_METADATA_2": "...",
          "KODING_METADATA_3": "..."
        },
        "fetch": [
          {
            "executable": false,
            "cache": true,
            "uri": "$SCREEN_URL"
          },
          {
            "executable": false,
            "cache": false,
            "uri": "$KLIENT_URL"
          },
          {
            "executable": true,
            "cache": false,
            "uri": "$ENTRYPOINT_URL/entrypoint.1.sh"
          },
          {
            "executable": true,
            "cache": false,
            "uri": "$ENTRYPOINT_URL/entrypoint.2.sh"
          },
          {
            "executable": true,
            "cache": false,
            "uri": "$ENTRYPOINT_URL/entrypoint.3.sh"
          }
        ],
        "health_checks": {
          "health_check": [
            {
              "command": {
                "value": "curl -f -X GET http://$$HOST:$${PORT_56789}/kite"
              },
              "max_consecutive_failures": 3,
              "protocol": "COMMAND"
            }
          ]
        },
        "mem": 128,
        "ports": [
          0,
          0,
          0
        ]
      }
    }
  }
}
